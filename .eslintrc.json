{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "semi": ["error", "never"],
        "arrow-parens": ["error", "as-needed"],
        "max-len": ["error", { "code": 140 }],
        "no-console": "off" // we hackathon
    }
}
